// Database: Moroccan Organica (V8.0)
// Architecture: Admin Auth + Guest CRM + Polyglot (EN/AR/FR)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// --- ENUMS ---
enum Role {
  ADMIN
  STAFF
}

enum LanguageCode {
  en // English
  ar // Arabic
  fr // French
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

// --- 1. AUTHENTICATION (Admins Only) ---
model User {
  id            String     @id @default(cuid())
  name          String?
  email         String?    @unique
  emailVerified DateTime?
  image         String?
  password      String?    // For admin credentials
  role          Role       @default(ADMIN)
  blogPosts     BlogPost[]
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

// --- 2. CUSTOMER CRM (Guest Mode) ---
model Customer {
  id            String    @id @default(cuid())
  
  // Guest Identity (No Password)
  email         String    @unique
  phone         String?   // Important for delivery
  firstName     String
  lastName      String
  
  // B2B / Wholesale Fields
  isWholesale   Boolean   @default(false)
  companyName   String?
  taxId         String?   // ICE
  
  // Metadata
  totalSpent    Decimal   @default(0) @db.Decimal(10, 2)
  lastOrderDate DateTime?
  marketingOptIn Boolean  @default(false)
  adminNotes    String?   @db.Text
  
  // Relations
  addresses     Address[]
  orders        Order[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
  @@index([phone])
}

model Address {
  id          String   @id @default(cuid())
  customerId  String
  customer    Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  
  label       String?  // "Home", "Office"
  addressLine1 String
  city        String
  postalCode  String
  country     String   @default("Morocco")
  phone       String?

  orders      Order[]

  @@index([customerId])
}

// --- 3. PRODUCT CATALOG (Multilingual) ---
model Category {
  id           String   @id @default(cuid())
  image        String?
  
  products     Product[]
  translations CategoryTranslation[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model CategoryTranslation {
  id          String       @id @default(cuid())
  categoryId  String
  category    Category     @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  language    LanguageCode
  
  name        String
  slug        String
  
  // SEO
  metaTitle   String?
  metaDesc    String?      @db.Text
  keywords    String?
  ogImage     String?
  canonical   String?
  
  @@unique([categoryId, language])
  @@unique([language, slug])
  @@index([categoryId])
  @@index([slug])
}

model Product {
  id           String   @id @default(cuid())
  categoryId   String
  category     Category @relation(fields: [categoryId], references: [id])
  
  // Neutral Data (Shared)
  basePrice    Decimal  @db.Decimal(10, 2)
  sku          String   @unique
  stock        Int      @default(0)
  isAvailable  Boolean  @default(true)
  isFeatured   Boolean  @default(false)
  isTopSale    Boolean  @default(false)
  
  variants     ProductVariant[]
  images       ProductImage[]
  translations ProductTranslation[]
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([categoryId])
  @@index([sku])
  @@index([isFeatured])
  @@index([isTopSale])
}

model ProductTranslation {
  id          String       @id @default(cuid())
  productId   String
  product     Product      @relation(fields: [productId], references: [id], onDelete: Cascade)
  language    LanguageCode
  
  name        String
  description String?      @db.LongText
  slug        String
  
  // SEO
  metaTitle   String?
  metaDesc    String?      @db.Text
  keywords    String?
  ogImage     String?
  canonical   String?
  
  @@unique([productId, language])
  @@unique([language, slug])
  @@index([productId])
  @@index([slug])
}

model ProductVariant {
  id        String      @id @default(cuid())
  productId String
  product   Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  sku       String      @unique
  sizeName  String      // e.g. "50ml", "1 Liter"
  price     Decimal     @db.Decimal(10, 2)
  stock     Int         @default(0)
  
  orderItems OrderItem[]

  @@index([productId])
  @@index([sku])
}

model ProductImage {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String
  isPrimary Boolean  @default(false)

  @@index([productId])
}

// --- 4. BLOG & STATIC PAGES ---
model Post {
  id           String   @id @default(cuid())
  published    Boolean  @default(false)
  authorName   String?
  translations PostTranslation[]
  publishedAt  DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([published])
  @@index([publishedAt])
}

model PostTranslation {
  id          String       @id @default(cuid())
  postId      String
  post        Post         @relation(fields: [postId], references: [id], onDelete: Cascade)
  language    LanguageCode
  
  title       String
  content     String?      @db.LongText
  slug        String
  
  // SEO
  metaTitle   String?
  metaDesc    String?      @db.Text
  keywords    String?
  ogImage     String?
  canonical   String?
  
  @@unique([postId, language])
  @@unique([language, slug])
  @@index([postId])
  @@index([slug])
}

model StaticPage {
  id           String   @id @default(cuid())
  systemName   String   @unique // e.g. "ABOUT_US"
  translations StaticPageTranslation[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([systemName])
}

model StaticPageTranslation {
  id           String       @id @default(cuid())
  staticPageId String
  staticPage   StaticPage   @relation(fields: [staticPageId], references: [id], onDelete: Cascade)
  language     LanguageCode
  
  h1           String?      @db.Text
  description  String?      @db.Text
  slug         String
  
  // SEO
  metaTitle    String?
  metaDesc     String?      @db.Text
  keywords     String?
  ogImage      String?
  canonical    String?
  
  @@unique([staticPageId, language])
  @@unique([language, slug])
  @@index([staticPageId])
  @@index([slug])
}

// --- 5. ORDERS & TRANSACTIONS ---
model Order {
  id                String      @id @default(cuid())
  reference         String      @unique // MO-2025-001
  
  customerId        String
  customer          Customer    @relation(fields: [customerId], references: [id])
  
  shippingAddressId String
  shippingAddress   Address     @relation(fields: [shippingAddressId], references: [id])
  
  status            OrderStatus @default(PENDING)
  totalAmount       Decimal     @db.Decimal(10, 2)
  
  paymentProvider   String      // STRIPE, PAYPAL
  paymentId         String?
  
  items             OrderItem[]
  
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  @@index([reference])
  @@index([customerId])
  @@index([status])
  @@index([createdAt])
}

model OrderItem {
  id                  String         @id @default(cuid())
  orderId             String
  order               Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  
  variantId           String
  variant             ProductVariant @relation(fields: [variantId], references: [id])
  
  // Snapshots (Data at time of purchase)
  productNameSnapshot String 
  variantNameSnapshot String
  priceSnapshot       Decimal        @db.Decimal(10, 2)
  
  quantity            Int

  @@index([orderId])
  @@index([variantId])
}

// ================== BLOG MODELS ==================

model BlogCategory {
  id          String     @id @default(cuid())
  name        String
  nameAr      String?
  slug        String     @unique
  description String?
  color       String?
  icon        String?
  sortOrder   Int        @default(0)
  posts       BlogPost[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([slug])
}

model BlogPost {
  id               String        @id @default(cuid())
  title            String
  titleAr          String?
  slug             String        @unique
  excerpt          String?
  excerptAr        String?
  content          String        @db.LongText // JSON content from TipTap
  contentAr        String?       @db.LongText
  featuredImageUrl String?
  authorId         String
  author           User          @relation(fields: [authorId], references: [id])
  categoryId       String?
  category         BlogCategory? @relation(fields: [categoryId], references: [id])
  tags             String?       @db.Text // JSON array of tags
  status           String        @default("draft") // draft, published, review, archived
  publishedAt      DateTime?
  viewCount        Int           @default(0)
  readTimeMinutes  Int           @default(5)
  metaTitle        String?
  metaDescription  String?
  media            BlogMedia[]
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  @@index([slug])
  @@index([status])
  @@index([authorId])
  @@index([categoryId])
}

model BlogMedia {
  id            String    @id @default(cuid())
  postId        String?
  post          BlogPost? @relation(fields: [postId], references: [id], onDelete: SetNull)
  mediaType     String    @default("image") // image, video
  url           String    @db.LongText
  storagePath   String?
  altText       String?
  caption       String?
  fileSizeBytes Int?
  mimeType      String?
  createdAt     DateTime  @default(now())

  @@index([postId])
}

// --- 6. GLOBAL SEO SETTINGS ---
model GlobalSeoSetting {
  id            String                 @id @default(cuid())
  ogImage       String?
  twitterHandle String?
  facebookPage  String?
  translations  GlobalSeoTranslation[]
  createdAt     DateTime               @default(now())
  updatedAt     DateTime               @updatedAt
}

model GlobalSeoTranslation {
  id                 String           @id @default(cuid())
  globalSeoSettingId String
  globalSeoSetting   GlobalSeoSetting @relation(fields: [globalSeoSettingId], references: [id], onDelete: Cascade)
  language           LanguageCode
  
  siteName           String?
  titleSuffix        String?
  defaultMetaDesc    String?          @db.Text
  defaultKeywords    String?
  
  @@unique([globalSeoSettingId, language])
  @@index([globalSeoSettingId])
}
